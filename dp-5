class Solution {
    public int uniquePaths(int m, int n) {
        
        return dfs(0,0,m,n);
        
    }
    
    
    private int dfs(int i, int j, int m, int n){
        
        
        //edge
        if( i >=n || j >= m) return 0;
        
        if(i == n-1 && j == m-1) return 1;
        //action and recurse
        int left = dfs(i+1, j, m, n);
        int right = dfs(i, j+1, m, n);
        
        return left+right;
        
    }
}
